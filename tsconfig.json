{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ✅ allow CSS (and other non-TS) side-effect imports with bundler resolution
    "allowArbitraryExtensions": true,

    // ✅ Use project root as base and point "@/..." to src/*
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // ✅ Silence the TS7 baseUrl deprecation warning for now
    "ignoreDeprecations": "6.0",

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
